general {
    colors = false
    interval = 1
    output_format = "i3bar"
}

order += "disk /" 
order += "ethernet enp4s0" 
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "time"
order += "volume master"

disk / {
    format = "Disk: %avail available / %total total"
}

ethernet enp4s0 {
    format_up = "Ethernet: Up %speed"
    format_down = "Ethernet: Down"
}

cpu_temperature 0 {
    format = "CPU Temperature: %degrees Â°C"
    path = /sys/class/thermal/thermal_zone0/temp
}

cpu_usage {
    format = "CPU Usage: %usage"
}

memory {
    format = "Memory: %used / %total"
}

time {
    format = "%Y-%m-%d %H:%M:%S"
}

volume master {
    format = "Volume: %volume"
    format_muted = "Volume: Muted"
}
