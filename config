general {
    colors = false
    interval = 1
    output_format = "i3bar"
}

order += "disk /" 
order += "memory"
order += "wireless wlp0s20f3" 
order += "battery 0"
order += "cpu_temperature 0"
order += "time"
order += "volume master"

disk / {
    format = "Disk: %avail available / %total"
}

wireless wlp0s20f3 {
    format_up = "%essid Bitrate: %bitrate"
    format_down = "Down"
}

battery 0 {
    format = "%status %percentage"
}

cpu_temperature 0 {
    format = "CPU Temp: %degrees Â°C"
    path = /sys/class/thermal/thermal_zone6/temp
}

memory {
    format = "Mem: %used used / %total"
}

time {
    format = "%Y-%m-%d %H:%M:%S"
}

volume master {
    format = "Volume: %volume"
    format_muted = "Muted"
}
